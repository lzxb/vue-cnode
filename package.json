{
  "name": "vue-cnode",
  "description": "基于vue.js开发的cnode社区",
  "author": "狼族小狈",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "node server",
    "start": "cross-env NODE_ENV=production node server",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix"
  },
  "engines": {
    "node": ">=7.0",
    "npm": ">=4.0"
  },
  "pre-commit": {
    "run": "lint"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "compression": "^1.7.1",
    "cross-env": "^5.1.3",
    "express": "^4.16.2",
    "firebase": "^4.6.2",
    "flex.css": "^1.1.7",
    "lru-cache": "^4.1.1",
    "normalize.css": "^7.0.0",
    "route-cache": "^0.4.3",
    "serve-favicon": "^2.4.5",
    "vue": "^2.5.13",
    "vue-i18n": "^7.4.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vuet": "^1.0.3",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
